<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         colors="true"
         bootstrap="vendor/autoload.php"
        >

    <testsuites>
        <testsuite name="All tests suites">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <php>
        <server name="KERNEL_DIR" value="tests/"/>
        <env name="MYSQL_ROOT_PASSWORD" value="root"/>
        <env name="MYSQL_DATABASE" value="test"/>
        <env name="MYSQL_USER" value="test"/>
        <env name="MYSQL_PASSWORD" value="test"/>
        <env name="MYSQL_HOST" value="mysql-lib-db-init"/>
    </php>
</phpunit>
